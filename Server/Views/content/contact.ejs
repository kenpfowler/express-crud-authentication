<main class="container">
  <div class="row align-items-center mt-5">
    <%# card with contact information %>
    <div class="col">
      <div class="card mb-5" style="width: 18rem">
        <div class="card-header">Contact Me</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <i class="fas fa-envelope"></i><a href="#">E-Mail</a>
          </li>
          <li class="list-group-item">
            <i class="fab fa-github"
              ><a href="https://github.com/kenpfowler">Github</a></i
            >
          </li>
          <li class="list-group-item">
            <i class="fab fa-linkedin"></i>
            <a href="https://www.linkedin.com/in/kenpfowler/">LinkedIn</a>
          </li>
        </ul>
      </div>
    </div>
    <%# Submittable contact form %>
    <div class="col">
      <form action="/home" method="GET">
        <div class="form-group">
          <label for="text">First Name</label>
          <input
            type="text"
            class="form-control"
            id="text"
            placeholder="Enter first name"
          />
        </div>
        <div class="form-group">
          <label for="last-name">Last Name</label>
          <input
            type="text"
            class="form-control"
            id="last-name"
            placeholder="Enter last name"
          />
        </div>
        <div class="form-group">
          <label for="email">Email Address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            aria-describedby="emailHelp"
            placeholder="Enter email"
          />
        </div>
        <div class="form-group">
          <label for="message">Message:</label>
          <textarea class="form-control" id="message" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</main>
