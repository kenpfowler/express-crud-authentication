<%- include partials/header.ejs %> 
<%- include partials/main_nav.ejs %>

<div class="row justify-content-lg-center g-3">
  <h1 class="text-center"><%= title %></h1>
  <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
    <div class="input-group mb-3">
      <span class="input-group-text" id="name">Name</span>
      <input
        id="name"
        type="text"
        class="form-control"
        placeholder="Name"
        aria-label="Name"
        aria-describedby="Item Name"
        name="name"
        value="<%= item.name %>"
        required
      />
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text" id="phone">Phone</span>
      <input
        id="phone"
        type="text"
        class="form-control"
        placeholder="phone"
        aria-label="phone"
        aria-describedby="Item phone"
        name="phone"
        value="<%= item.phone %>"
        required
      />
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text" id="email">E-Mail</span>
      <input
        id="email"
        type="email"
        class="form-control"
        placeholder="email"
        aria-label="email"
        aria-describedby="Item email"
        name="email"
        value="<%= item.email %>"
        required
      />
    </div>

    <button type="submit" id="editBtn" class="btn btn-primary">
      <i class="fas fa-edit fa-lg"></i> Edit
    </button>
  </form>
</div>

<%- include partials/bottom_nav.ejs %> 
<%- include partials/footer.ejs %>
